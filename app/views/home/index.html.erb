<div class="container">
<h1>FootBall</h1>

<div class="container border border-success">
<%= form_tag(search_path, method: :get) do %>
  <h3>Display a list of teams from a selected League</h3>
  <div class="form-group">
    <%= label_tag :league_id, 'Select League' %>
    <%= select_tag :league_id, options_for_select(League.all.map { |l| [l.league_name, l.id] }), include_blank: true, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= label_tag :table_name, 'Table Name' %>
    <%= text_field_tag :table_name, params[:table_name], class: 'form-control' %>
  </div>
  <%= submit_tag 'Search', class: 'btn btn-primary' %>
<% end %>
</div>

</div>